    <addForeignKeyConstraint baseColumnNames="donation_id" baseTableName="BloodTestResult" constraintName="fk_Donation_BloodTestResult_donation_id"
      referencedColumnNames="id" referencedTableName="Donation"/>

    <addForeignKeyConstraint baseColumnNames="donation_id" baseTableName="Component" constraintName="fk_Donation_Component_donation_id"
