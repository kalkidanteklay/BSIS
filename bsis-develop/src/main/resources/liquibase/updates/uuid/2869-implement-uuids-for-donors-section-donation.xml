      SET updateTable.donation_id = joinedTable.id 
      WHERE joinedTable.id IS NOT null; 
    </sql>

    <dropColumn columnName="id_temp" tableName="Donation"/>

    <dropColumn columnName="id_temp" tableName="Donation_AUD"/>

    <dropColumn columnName="donation_id_temp" tableName="BloodTestResult"/>

    <dropColumn columnName="donation_id_temp" tableName="Component"/>

    <dropColumn columnName="donation_id_temp" tableName="DuplicateDonorBackup"/>

    <dropColumn columnName="donation_id_temp" tableName="PostDonationCounselling"/>

    <dropColumn columnName="donation_id_temp" tableName="Component_AUD"/>

