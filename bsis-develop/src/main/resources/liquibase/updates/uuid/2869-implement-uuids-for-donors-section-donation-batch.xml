<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet id="20170330-1400" author="lauravignoli">
    <dropForeignKeyConstraint baseTableName="Donation" constraintName="fk_Donation_DonationBatch"/>

    <addColumn tableName="DonationBatch">
      <column name="id_temp" type="BIGINT" afterColumn="id"/>
    </addColumn>

    <addColumn tableName="DonationBatch_AUD">
      <column name="id_temp" type="BIGINT" afterColumn="id"/>
    </addColumn>

    <addColumn tableName="Donation">
      <column name="donationBatch_id_temp" type="BIGINT" afterColumn="donationBatch_id"/>
    </addColumn>

    <addColumn tableName="Donation_AUD">
      <column name="donationBatch_id_temp" type="BIGINT" afterColumn="donationBatch_id"/>
    </addColumn>

    <sql>
      UPDATE DonationBatch 
      SET id_temp = id;
    </sql>

    <!-- Create Index on temporary id_temp field to make updates referencing it more efficient. -->
    <createIndex indexName="donationbatch_id_temp_index" tableName="DonationBatch" unique="true">
        <column name="id_temp" type="BIGINT"/>
    </createIndex>

    <sql>
      UPDATE DonationBatch_AUD 
      SET id_temp = id;
    </sql>

    <sql>
      UPDATE Donation_AUD 
      SET donationBatch_id_temp = donationBatch_id;
    </sql>

    <sql>
      UPDATE Donation 
      SET donationBatch_id_temp = donationBatch_id;
    </sql>

    <!-- Remove auto increment from the existing id column -->
    <modifyDataType columnName="id" newDataType="BIGINT(20)" tableName="DonationBatch"/>

    <modifyDataType columnName="id" newDataType="BINARY(16)" tableName="DonationBatch"/>

    <modifyDataType columnName="id" newDataType="BINARY(16)" tableName="DonationBatch_AUD"/>

    <modifyDataType columnName="donationBatch_id" newDataType="BINARY(16)" tableName="Donation"/>

    <modifyDataType columnName="donationBatch_id" newDataType="BINARY(16)" tableName="Donation_AUD"/>

    <sql>
      UPDATE DonationBatch 
      SET id = GENERATEBINARYUUID()
      ORDER BY id_temp;
    </sql>

    <sql dbms="mysql">
      ALTER TABLE DonationBatch ADD id_text varchar(36) GENERATED ALWAYS AS (LCASE(CONCAT_WS('-', 
        HEX(SUBSTR(id,  1, 4)),
        HEX(SUBSTR(id,  5, 2)),
        HEX(SUBSTR(id,  7, 2)),
        HEX(SUBSTR(id,  9, 2)),
        HEX(SUBSTR(id, 11)) )))
      VIRTUAL AFTER id;
    </sql>

    <sql dbms="mysql">
      ALTER TABLE DonationBatch_AUD ADD id_text varchar(36) GENERATED ALWAYS AS (LCASE(CONCAT_WS('-', 
        HEX(SUBSTR(id,  1, 4)),
        HEX(SUBSTR(id,  5, 2)),
        HEX(SUBSTR(id,  7, 2)),
        HEX(SUBSTR(id,  9, 2)),
        HEX(SUBSTR(id, 11)) )))
      VIRTUAL AFTER id;
    </sql>

    <sql>
      UPDATE DonationBatch_AUD AS updateTable
        LEFT JOIN DonationBatch AS joinTable ON (updateTable.id_temp = joinTable.id_temp)
      SET updateTable.id = joinTable.id
      WHERE joinTable.id IS NOT null; 
    </sql>

    <!-- Delete orphaned rows from Audit table. These values uuids cannot be found since the rows were deleted in the original table-->
    <sql>
      DELETE DonationBatch_AUD
      FROM DonationBatch_AUD
        LEFT JOIN DonationBatch AS joinTable ON (DonationBatch_AUD.id = joinTable.id)
      WHERE joinTable.id IS null
    </sql>

    <sql>
      UPDATE Donation AS updateTable
        LEFT JOIN DonationBatch AS joinedTable ON (updateTable.donationBatch_id_temp = joinedTable.id_temp)
      SET updateTable.donationBatch_id = joinedTable.id 
      WHERE joinedTable.id IS NOT null; 
    </sql>

    <sql>
      UPDATE Donation_AUD AS updateTable
        LEFT JOIN DonationBatch AS joinedTable ON (updateTable.donationBatch_id_temp = joinedTable.id_temp)
      SET updateTable.donationBatch_id = joinedTable.id 
      WHERE joinedTable.id IS NOT null; 
    </sql>

    <dropColumn columnName="id_temp" tableName="DonationBatch"/>

    <dropColumn columnName="id_temp" tableName="DonationBatch_AUD"/>

    <dropColumn columnName="donationBatch_id_temp" tableName="Donation"/>

    <dropColumn columnName="donationBatch_id_temp" tableName="Donation_AUD"/>

    <addForeignKeyConstraint baseColumnNames="donationBatch_id" baseTableName="Donation" constraintName="fk_Donation_DonationBatch"
      referencedColumnNames="id" referencedTableName="DonationBatch"/>

  </changeSet>

</databaseChangeLog>
