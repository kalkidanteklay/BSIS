    <sql>
      UPDATE DuplicateDonorBackup AS updateTable
        LEFT JOIN Donation AS joinedTable ON (updateTable.donation_id_temp = joinedTable.id_temp)
      SET updateTable.donation_id = joinedTable.id 
      WHERE joinedTable.id IS NOT null; 
    </sql>

    <sql>
      UPDATE PostDonationCounselling AS updateTable
        LEFT JOIN Donation AS joinedTable ON (updateTable.donation_id_temp = joinedTable.id_temp)
      SET updateTable.donation_id = joinedTable.id 
      WHERE joinedTable.id IS NOT null; 
    </sql>

    <sql>
      UPDATE Component_AUD AS updateTable
        LEFT JOIN Donation AS joinedTable ON (updateTable.donation_id_temp = joinedTable.id_temp)
